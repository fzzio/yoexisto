{% extends "YoExistoContenidoBundle:Templates:dashboard.html.twig" %}

{% block menu %}
	{% include 'YoExistoContenidoBundle:Blocks:menu-user.html.twig' %}
{% endblock %}

{% block contenidointerno %}
	<div class="container-fluid">
		
		<div class="row espacio-a">
			<div class="col-lg-10 col-md-10 col-sm-10 col-xs-1000">
				<h3 class="txt-mayusculas">Generar Control</h3>
				<span>Llene los datos a continuación para generar control</span>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 text-right">
				<h3>
					<a href="{{ path('yoexisto_reciente') }}" class="link-yep icono-cerrar" alt=""></a>
				</h3>
			</div>
		</div>
		<div class="row espacio-a">
			<div class="col-md-4 text-center">
				<h1 class="txt-mayusculas espacio-a">Qué está pasando?</h1>
				<span class="espacio-a">Describe de que se trata este control en máximo 300 caracteres y una foto.</span>
				{% image '@YoExistoContenidoBundle/Resources/public/images/que.png' %}
				<img src="{{ asset_url }}" title="" alt="" class="img-responsive img-centrar img-icono-grande" />
				{% endimage %}
			</div>

            <form id="form"  method="post"   {{ form_enctype(form) }}  action="{{ path('yoexisto_que') }}" >
			<div class="col-md-8 txt-mayusculas">
				<div class="form-group espacio-a">
                    {{ form_widget(  form.titulo, {'attr':{'class':'form-control yea-borde input-yeapp' , 'placeholder' : 'Ingresa un titulo para el control' }} ) }}

				</div>
				<div class="form-group espacio-a">
                    {{ form_widget(  form.descripcion, {'attr':{'class':'form-control yea-borde input-yeapp' , 'placeholder' : 'Cuéntanos lo que está pasando' , 'rows': '5' }} ) }}

				</div>
				<div class="form-group form-group-sm espacio-a">
					<span class="lbl-form-sm" for="sm_input_file_1">Suba una foto:</span>
					<div class="custom-input-file">
                    	{{ form_widget(  form.file , {'attr':{'id':'sm_input_file_1' , 'class':'form-control input-file' , 'placeholder' : 'Suba una foto', 'name':'sm_input_file_1', 'onchange':'readURL(this);' }} ) }}
						<img id="sm-img-foto-1" class="sm-img-foto img-responsive" src="" alt="" />
					</div>


				</div>
            </div>
                {{ form_widget(form._token) }}
            </form>

        </div>

		<div class="row espacio-a">
			<div class="col-md-4 col-md-offset-2 txt-mayusculas">
				<button  onclick="window.location='{{path('yoexisto_donde') }}'"  class="btn btn-lg btn-home btn-tipo-a">Atrás</button>
			</div>
			<div class="col-md-4 txt-mayusculas">
				<button type="submit" class="btn btn-lg btn-home btn-tipo-a" onclick="document.getElementById('form').submit();"  >Siguiente</button>
			</div>
		</div>
	</div>

{% endblock %}