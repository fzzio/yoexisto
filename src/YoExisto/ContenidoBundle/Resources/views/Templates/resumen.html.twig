{% extends "YoExistoContenidoBundle:Templates:dashboard.html.twig" %}

{% block menu %}
	{% include 'YoExistoContenidoBundle:Blocks:menu-user.html.twig' %}
{% endblock %}

{% block contenidointerno %}
	<div class="container-fluid">
		<div class="row espacio-a fondo-naranjabajo">
			<div class="col-lg-11 col-md-11 col-sm-10 col-xs-10 text-center">
				<h3 class="txt-mayusculas">Generar Control</h3>
				<h4>
					Los bienes y servicios son tuyos,<br />
					Si detectas algo que pudo o debe estar mejor, notifícalo ahora
				</h4>
			</div>
			<div class="col-lg-1 col-md-1 col-sm-2 col-xs-2 text-right">
				<h3>
					<a href="{{ path('yoexisto_reciente') }}" class="link-yep icono-cerrar" alt=""></a>
				</h3>
			</div>
		</div>
		<div class="row espacio-a">
			<div class="col-md-4 text-center">
				<h1 class="txt-mayusculas espacio-a">Resumen Control</h1>
				{% image '@YoExistoContenidoBundle/Resources/public/images/resumen.png' %}
				<img src="{{ asset_url }}" title="" alt="" class="img-responsive img-centrar img-icono-grande" />
				{% endimage %}
			</div>
			<div class="col-md-8 txt-mayusculas">

                <form id="form"  method="post" action="{{ path('yoexisto_resumen') }}">

				<p>
					<strong>Municipio: </strong>{{ control.donde.municipio }}
				</p>
				<p>
					<strong>Área: </strong>{{ control.donde.area }}
				</p>
				<p>
					<strong>Dirección: </strong>{{ control.donde.descripcion }}
				</p>
				<p>
					<strong>Nombre institución: </strong>{{ control.que.titulo }}
				</p>
				<p>
					<strong>Descripción Control: </strong>{{ control.que.descripcion}}
				</p>
				<p>
					<strong>Imagen: </strong><img src="{{ asset('uploads/'  ~  control.que.archivo  ) }}" alt="" class="img-responsive" />
				</p>
                </form>
			</div>
		</div>
		<div class="row espacio-a">
			<div class="col-md-4 col-md-offset-2 txt-mayusculas">
				<button class="btn btn-lg btn-home btn-tipo-a"  onclick="window.location='{{ path('yoexisto_que') }}' " >Atrás</button>
			</div>
			<div class="col-md-4 txt-mayusculas">
				<button class="btn btn-lg btn-home btn-tipo-a"   onclick=" document.getElementById('form').submit(); " >Activar Control</button>
			</div>
		</div>
	</div>

{% endblock %}