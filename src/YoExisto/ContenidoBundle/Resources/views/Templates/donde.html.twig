{% extends "YoExistoContenidoBundle:Templates:dashboard.html.twig" %}
{% block contenidointerno %}
    <div class="container-fluid" xmlns="http://www.w3.org/1999/html">
		
		<div class="row espacio-a">
			<div class="col-md-12 espacio-a">
				<h3 class="txt-mayusculas">Generar Control</h3>
				<span>Llene los datos a continuación para generar control</span>
			</div>
		</div>
		<div class="row espacio-a">
			<div class="col-md-4 text-center">
				<h1 class="txt-mayusculas espacio-a">¿Dónde?</h1>
				<span class="espacio-a">Cuéntanos que quieres controlar</span>
				{% image '@YoExistoContenidoBundle/Resources/public/images/donde.png' %}
				<img src="{{ asset_url }}" title="" alt="" class="img-responsive img-centrar" />
				{% endimage %}
			</div>


            <form   method="post" action="{{ path('yoexisto_donde') }}" >

                {{ form_errors(form) }}

			<div class="col-md-8 txt-mayusculas">

                {{ form_widget(  form.municipio , {'attr':{'class':'form-control espacio-a'}} ) }}
                {{ form_widget(  form.area , {'attr':{'class':'form-control espacio-a'}} ) }}
                {{ form_widget(  form.latitud  ) }}
                {{ form_widget(  form.longitud  ) }}



				<span>Escribe la dirección o geolocaliza tu ubicación</span>
				<div class="form-group">
                    {{ form_widget(  form.descripcion , {'attr':{'placeholder':'Direccion'}} ) }}

                    <button class="btn btn-tipo-a btn-geo">Geolocalizar</button>
				</div>
				<div id="geomapa" class="geomapa">
					
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Nombre de la institución (de ser necesario)">
				</div>
			</div>
		</div>
		<div class="row espacio-a">
			<div class="col-md-4 col-md-offset-4 txt-mayusculas">
				<div class="form-group">
					<button class="btn btn-lg btn-home btn-tipo-a">Siguiente</button>
				</div>
			</div>
		</div>
        {{ form_widget(form._token) }}
        </form>
	</div>

{% endblock %}