{% extends "YoExistoContenidoBundle::layout.html.twig" %}

{% block contenido %}

	<div class="wrapper-dashboard">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<br /><br /><br /><br /><br />
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-8 espacio-a" id="mis-reportes">
					<div class="container-fluid fondo-gris">
						<div class="row fondo-naranja txt-mayusculas txt-blanco">
							<ul class="nav nav-bar col-md-5 lst-perfil">
								<li class="col-lg-5 col-md-5 col-sm-5 col-xs-5 interlineado-140">
                                    {% if  app.user.foto %}
									    <img src="{{ asset( 'uploads/profile/' ~ app.user.foto ) }}"   style="height: 85px; width: 85px;" alt="" class="img-responsive img-centrar img-perfil" />
                                    {% else %}

                                        <img  src="{{ asset( 'uploads/default.png' ) }}"   style="height: 85px; width: 85px;" alt="" class="img-responsive img-centrar img-perfil" />

                                    {% endif %}
								</li>
								<li class="col-lg-7 col-md-7 col-sm-7 col-xs-7 text-left interlineado-140">
									<span class="">{{ app.user.username }}</span>
								</li>
							</ul>

                            {{ render(controller('YoExistoContenidoBundle:Default:getControles')) }}

						</div>
						<div class="row">
							<div class="col-md-12 espacio-a">
								{% block contenidointerno %}

									
								{% endblock %}
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-3 espacio-a" id="reporte-detalle">
					{% include 'YoExistoContenidoBundle:Blocks:detalle-reporte.html.twig' %}
				</div>

				<div class="col-md-4 espacio-a" id="reportes-recientes">
					<div class="container-fluid fondo-gris">
						<div class="row fondo-naranja txt-mayusculas txt-blanco">
							<div class="col-md-12 espacio-a ">
								<span class="txt-mayusculas">
									Controles generados
								</span>
							</div>
						</div>

						<div class="row espacio-a ">
							<div class="col-md-12">
								<h4 class="txt-mayusculas">
									Filtrar b√∫squeda
								</h4>
								<select id="filtro_municipio" onchange="getAreasPorMunicipio(this);" class="form-control espacio-a yea-borde input-yeapp oscuro">
                                    {{ render(controller('YoExistoContenidoBundle:Filtro:getMunicipios')) }}
                                </select>
								<select  id="filtro_areas"  onchange="getActividadPorArea( this )" class="form-control espacio-a yea-borde input-yeapp oscuro">
									<option>-</option>
								</select>

                                <select  id="filtro_estado"  onchange="  $('#filtro_areas').trigger('change'); " class="form-control espacio-a yea-borde input-yeapp oscuro">
									<option value="0" >Todos los estados</option>
									<option value="1" >Solucionado</option>
									<option value="2"  >En Proceso </option>
									<option value="3" >Sin Atencion</option>
									<option value="4" >En Votacion</option>
								</select>


								<hr class="linea-gris" />
							</div>
						</div>
					</div>
					<div  id="actividadReciente" class="container-fluid fondo-gris reportes-recientes-cont">
                        {{ render(controller('YoExistoContenidoBundle:Default:getActividadReciente')) }}
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}