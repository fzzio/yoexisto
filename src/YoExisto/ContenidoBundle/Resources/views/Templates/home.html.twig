{% extends "YoExistoContenidoBundle::layout.html.twig" %}

{% block contenido %}


    {% if error %}
        <div>
            <p >{{  error.message }}</p>
        </div>
    {% endif %}

	<div class="fondo-cover wrapper-home">
		<div class="v-center-contenedor">
			<div class="v-center-contenido-v">
				
				<div class="container">
					<div class="row">
						<div class="col-md-4 col-md-offset-8 text-left">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-12 text-center">
										{% image '@YoExistoContenidoBundle/Resources/public/images/logo290x60.png' %}
										<img src="{{ asset_url }}" title="" alt="" class="img-responsive" />
										{% endimage %}
									</div>
								</div>


								<div class="row">
									<div class="col-md-12">
										<h3 class="titular-home text-center">El poder de tu dispositivo</h3>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<form class="form-home form-horizontal" method="post" action="{{ path('login_check') }}" >
											<div class="inner-addon left-inner-addon ">
											    <i class="icono icono-usuario"></i>
											    <input type="text" class="form-control input-home" name="_username" placeholder="USUARIO" />
											</div>
											<div class="inner-addon left-inner-addon ">
											    <i class="icono icono-password"></i>
											    <input type="password" class="form-control input-home" name="_password" placeholder="CONTRASEÃ‘A" />
											</div>
											<div class="checkbox">
												<label class="lbl-home">
													<input type="checkbox"> RECORDARME
												</label>
											</div>
											<div class="col-sm-8 col-sm-offset-2 text-center">
												<button type="submit" class="btn btn-lg btn-home btn-tipo-a">Ingresar</button>
												<a href="{{ path('yoexisto_registrar') }}" class="btn btn-lg btn-home btn-tipo-b">Registrate</a>
											</div>

                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                                    >
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
		
			</div>
		</div>
	</div>


{% endblock %}